{
  "storage": {
    "csv_dir": "data/csv",
    "influx_enabled": true,
    "influx_url": "http://localhost:8086",
    "influx_org": "your-org",
    "influx_bucket": "your-bucket"
  },
  "kite": {
    "instrument_cache_path": ".cache/kite_instruments.json",
    "instrument_ttl_hours": 6,
    "rate_limit_per_sec": 5.0,
    "max_retries": 5,
    "http_timeout": 10,
    "default_exchanges": ["NSE", "NFO", "BSE", "BFO"]
  },
  "orchestration": {
    "run_interval_sec": 60,
    "prometheus_port": 9108
  },
  "index_params": {
    "NIFTY": {
      "strike_step": 50,
      "expiry_rules": ["this_week", "next_week", "this_month", "next_month"],
      "offsets": [-10, -5, -3, -2, -1, 0, 1, 2, 3, 5, 10]
    },
    "BANKNIFTY": {
      "strike_step": 100,
      "expiry_rules": ["this_month", "next_month"],
      "offsets": [-10, -5, -3, -2, -1, 0, 1, 2, 3, 5, 10]
    },
    "FINNIFTY": {
      "strike_step": 50,
      "expiry_rules": ["this_month", "next_month"],
      "offsets": [-5, -3, -1, 0, 1, 3, 5]
    },
    "SENSEX": {
      "strike_step": 100,
      "expiry_rules": ["this_week", "next_week", "this_month", "next_month"],
      "offsets": [-10, -5, -3, -2, -1, 0, 1, 2, 3, 5, 10]
	}
  }
}