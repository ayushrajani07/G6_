{
  "version": "2.0",
  "application": "g6_platform",
  "metrics": {
    "port": 9108,
    "host": "0.0.0.0"
  },
  "collection": {
    "interval_seconds": 60
  },
  "greeks": {
    "enabled": true,
    "estimate_iv": true,
    "risk_free_rate": 0.05,
    "iv_max_iterations": 100,
    "iv_min": 0.01,
    "iv_max": 3.0,
    "iv_precision": 1e-5
  },
  "storage": {
    "csv_dir": "data/g6_data",
    "influx": {
      "enabled": true,
      "url": "http://127.0.0.1:8086",
      "org": "g6",
      "bucket": "g6_data"
    }
  },
  "overlays": {
    "weekday": {
      "alpha": 0.5,
      "output_dir": "data/weekday_master"
    }
  },
  "indices": {
    "NIFTY": {
      "enable": true,
      "strikes_itm": 6,
      "strikes_otm": 6,
      "expiries": ["this_week", "next_week", "this_month", "next_month"]
    },
    "BANKNIFTY": {
      "enable": true,
      "strikes_itm": 10,
      "strikes_otm": 10,
      "expiries": ["this_month", "next_month"]
    },
    "FINNIFTY": {
      "enable": true,
      "strikes_itm": 5,
      "strikes_otm": 5,
      "expiries": ["this_month", "next_month"]
    },
    "SENSEX": {
      "enable": true,
      "strikes_itm": 10,
      "strikes_otm": 10,
      "expiries": ["this_week", "next_week", "this_month", "next_month"]
    }
  },
  "features": {
    "analytics_startup": true
  },
  "console": {
    "fancy_startup": true,
    "live_panel": true,
    "startup_banner": true,
    "force_ascii": true,
    "runtime_status_file": "data/runtime_status.json"
  }
}